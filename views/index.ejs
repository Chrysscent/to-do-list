<%- include("partials/header.ejs") %>
    <main>
        <div class="container">
            <div id="header">
                <h1><%= data.day[new Date().getDay()] %>, <%= data.month[new Date().getMonth()] %> <%= new Date().getDate() %><%= data.dateSuffix() %></h1>
            </div>
            <div id="content-body">
                <form action="/task" method="post">
                    <input type="text" name="tTask" placeholder="New Task" class="task-input" required>
                    <input type="submit" value="+" id="button">
                </form>
                <div class="notepad">
                    <% if (locals.tTaskList) { %>
                        <% for( let index = tTaskList.length - 1; index !== -1; index-- ) { %>
                            <div class="list-item">
                                <input type="checkbox" name="checkbox">
                                <p><%= tTaskList[index] %></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
<%- include("partials/footer.ejs") %>